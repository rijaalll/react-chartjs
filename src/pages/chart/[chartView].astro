---
import Layout from "../../layouts/layout.astro";
import ChartPage from "../../components/ChartPage.tsx";
export const prerender = false;

const thisPath = ["tiktok", "youtube", "facebook", "instagram", "whatsapp", "quora", "X"];
const { chartView } = Astro.params;

if (!chartView || !thisPath.includes(chartView)) {
  return new Response(null, { status: 404 });
}
---

<Layout title={`${chartView} | data`} metaTitle={`data unduhan ${chartView} di indonesia`} metaType="website">
  <div class="w-full min-h-[100dvh] px-4 py-8 md:px-8 lg:px-12 mt-[5rem]">
    <div class="flex flex-col md:flex-row md:items-start md:gap-8 lg:gap-12 max-w-7xl mx-auto">
      <div class="w-full md:w-1/3 mb-8 md:mb-0 md:sticky md:top-8">
        <h1 class="text-3xl font-bold mb-3 capitalize">{chartView}</h1>
        <p class="text-xl font-medium mb-2">Data Unduhan {chartView}</p>
        <p class="text-gray-700 mb-6">Menampilkan data unduhan aplikasi dari 2020 hingga 2024.</p>
      </div>
      <div class="w-full md:w-2/3 h-auto md:h-[80vh] bg-white rounded-xl shadow-md overflow-hidden py-5">
        <ChartPage client:load chartView={chartView} />
      </div>
    </div>
  </div>
</Layout>